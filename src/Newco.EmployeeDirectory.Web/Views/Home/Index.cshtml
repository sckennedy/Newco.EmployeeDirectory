@model Newco.EmployeeDirectory.Web.Models.Home.SearchModel

@{
    ViewData["Title"] = "Cisco Directory Search";
}

<div class="col-md-12">
    <form asp-action="Search" asp-controller="Home" method="post" class="justify-content-center">
        <div class="form-group">
            <div class="row">
                <div class="col-8">
                    <input class="form-control" type="text" placeholder="Search" asp-for="SearchTerm">
                </div>
                <div class="col-4 col-sm-2">
                    <button class="btn btn-outline-primary" type="submit" id="EmployeeSearch"><i class="fa fa-search"></i> Search</button>
                </div>
            </div>
        </div>
    </form>
</div>

    <div id="SearchResultsContainer">
    </div>
    <!-- Javascript for ajax call back is in the site.js file-->
